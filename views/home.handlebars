
<div class="section--0 container-fluid">
  <div class="header__title container">
    <div class="row">
      <div class="col-md-8 col-sm-6 col-xs-12">
        <h1 class="header__title__text">
          Ta dig i kragen för
          <br />helvete Vanessa!
        </h1>
      </div>

      <div class="col-md-4 col-sm-6 col-xs-12">
        <img
          src="/img/home_header.jpg"
          alt="home header"
          class="header__title__img img-responsive"
        />
      </div>
    </div>
  </div>
</div>


<main>
  <section id="section--1" class="panel">
    {{!-- pagination --}}
    <div class="home-pagination">
      <a
        href="/words?page={{#if (equal currentPage totalPages)}}1{{else}}{{add currentPage 1}}{{/if}}&limit={{limit}}"
        class="btn home-pagination__btn"
      >
          <span class="glyphicon glyphicon-refresh"></span>
      </a>
    </div>
    
    {{!-- words --}}
    <div class="container">
      <div class="row homepage-section1-row ">
        {{#each words}}
          <div class="col-1-of-6 col-md-4 col-sm-6 col-xs-12">
            <div class="thumbnail feature-box">
              <div class="feature-box__section--1">
                <h3><b>{{word}}</b></h3>
              </div>

              <div class="feature-box__section--2">
                <p><b>ORDKLASS: </b>{{word_class}}</p>
              </div>

              <div class="feature-box__section--3">
                <div class="feature-box__section--3__example">
                  <p><b>1.&nbsp;</b><span>{{example_1}}</span></p>
                </div>
                <div class="feature-box__section--3__example">
                  <p><b>2.&nbsp;</b><span>{{example_2}}</span></p>
                </div>

                <div class="text-center">
                  <button
                    class="btn section--1__btn"
                    data-toggle="modal"
                    data-target="#detailModal-{{id}}"
                  >
                    <span class="glyphicon glyphicon-search"></span>
                    Läs mer
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal -->
          <div
            class="modal fade"
            id="detailModal-{{id}}"
            tabindex="-1"
            role="dialog"
            aria-labelledby="detailModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="detailModalLabel">Detail of
                    "{{word}}"</h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h3><b>{{word}}</b></h3>
                  <p>{{word_forms}}</p>
                  <hr />
                  <h4><b>Definition</b></h4>
                  <p>{{word_definition}}</p>
                  <br />
                  <h4><b>Examples</b></h4>
                  <p>1. {{example_1}}</p>
                  <p>{{example_1_translation}}</p>
                  <p>2. {{example_2}}</p>
                  <p>{{example_2_translation}}</p>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >Stäng</button>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
  </section>

  <section id="section--2">
    <div class="slider">

      <div class="slide container">
        <div class="slide__testimonial">
          <address class="slide__author">
            <img
              src="/img/emil.png"
              alt="slide 1 author"
              class="slide__author__img1"
            />
            <p class="slide__author__name">Emil Kronholm</p>
          </address>
          <blockquote class="slide__text">
            Hårt arbete lönar sig alltid.
          </blockquote>
        </div>
      </div>

      <div class="slide container">
        <div class="slide__testimonial">
          <address class="slide__author">
            <img
              src="./img/Leo.jpg"
              alt="slide 1 author"
              class="slide__author__img1"
            />
            <p class="slide__author__name">Leo</p>
          </address>
          <blockquote class="slide__text">
            Gör morgondagens du stolt.
          </blockquote>
        </div>
      </div>

      <div class="slide container">
        <div class="slide__testimonial">
          <address class="slide__author">
            <img
              src="./img/missSexy.jpg"
              alt="slide 1 author"
              class="slide__author__img1"
            />
            <p class="slide__author__name">Miss Sexy</p>
          </address>
          <blockquote class="slide__text">
          {{!-- En dag kommer Emil slå vanessa i pingis. --}}
          Du kan om du vill
          </blockquote>
        </div>
      </div>

      <button
        class="slider__btn slider__btn--left glyphicon glyphicon-chevron-left"
      ></button>
      <button
        class="slider__btn slider__btn--right glyphicon glyphicon-chevron-right"
      ></button>
      <div class="dots"></div>
    </div>
  </section>
</main>
